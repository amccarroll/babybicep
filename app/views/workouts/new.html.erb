<h1>Create New Workout</h1>

<%= form_for :workout, url: workouts_path do |f| %>

<% if @workout.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@workout.errors.count, "mistake") %> stopped this 
    workout from being saved:</h2>
  <ul>
  <% @workout.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <p>
    <%= f.label :trainer %><br>
    <%= f.text_field :trainer %>
  </p>
 
  <p>
    <%= f.label :intensity %><br>
    <%= f.text_field :intensity %>
  </p>

    <p>
    <%= f.label :program %><br>
    <%= f.text_area :program %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
